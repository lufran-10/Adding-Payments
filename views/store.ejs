<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="This is a fanpage for the kpop group Red Velvet, where fans can buy tickets for upcoming concerts, their latest CDs and merchandising.">
  <link rel="stylesheet" href="./styles.css">
  <script src="https://checkout.stripe.com/checkout.js" defer></script>
  <script>
    var stripePublicKey = '<%= stripePublicKey %>'
  </script>
  <script src="./store.js" defer></script>
  <title>Red Velvet | Store</title>
</head>
<body>
  <header class="main-header">
    <nav class="nav main-nav">
      <ul>
        <li><a href="index.html">HOME</a></li>
        <li><a href="store.html">STORE</a></li>
        <li><a href="about.html">ABOUT</a></li>
      </ul>
    </nav>
    <h1 class="band-name band-name-large">Red Velvet</h1>
  </header>
  <section class="content-section container">
    <h2 class="section-header">MUSIC</h2>
    <div class="shop-items">
      <% items.music.forEach(function(item) { %>
        <div class="shop-item" data-item-id="<%= item.id %>">
          <span class="shop-item-title"><%= item.name %></span>
          <img class="shop-item-image" src="./Images/<%= item.imgName %>" alt="<%= item.name %>.">
          <div class="shop-item-details">
            <span class="shop-item-price">$<%= item.price / 100 %></span>
            <button class="btn btn-primary shop-item-button" role="button">ADD TO CART</button>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
  <section>
    <h2 class="section-header">MERCH</h2>
    <div class="shop-items">
      <% items.merch.forEach(function(item) { %>
        <div class="shop-item" data-item-id="<%= item.id %>">
          <span class="shop-item-title"><%= item.name %></span>
          <img class="shop-item-image" src="./Images/<%= item.imgName %>" alt="<%= item.name %>.">
          <div class="shop-item-details">
            <span class="shop-item-price">$<%= item.price / 100 %></span>
            <button class="btn btn-primary shop-item-button" role="button">ADD TO CART</button>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
  <section class="content-section container">
    <h2 class="section-header">CART</h2>
    <div class="cart-row">
      <span class="cart-item cart-header cart-column">ITEM</span>
      <span class="cart-price cart-header cart-column">PRICE</span>
      <span class="cart-quantity cart-header cart-column">QUANTITY</span>
    </div>
    <div class="cart-items">
    </div>
    <div class="cart-total">
      <span class="cart-total-title">Total</span>
      <span class="cart-total-price">$0</span>
    </div>
    <button class="btn btn-primary btn-purchase" role="button">PURCHASE</button>
  </section>
  <footer class="main-footer">
    <div class="main-footer-container container">
      <h3 class="band-name">Red Velvet</h3>
      <ul class="nav footer-nav">
        <li><a href="https://www.youtube.com/channel/UCk9GmdlDTBfgGRb7vXeRMoQ" target="_blank">
          <img src="./Images/YouTube.png" alt="YouTube logo."></a></li>
        <li><a href="https://open.spotify.com/artist/1z4g3DjTBBZKhvAroFlhOM" target="_blank">
          <img src="./Images/Spotify.jpg" alt="Spotify logo."></a></li>
        <li><a href="https://www.instagram.com/redvelvet.smtown/?hl=es" target="_blank">
          <img src="./Images/Instagram.jpg" alt="Instagram logo."></a></li>
      </ul>
    </div>
  </footer>
</body>
</html>